#:import get_color_from_hex kivy.utils.get_color_from_hex
<MainScreen>:
    id: mainScreen
    MDBottomNavigation:
        panel_color: get_color_from_hex("#d0f7d6")
        selected_color_background: get_color_from_hex("#6b8a70")
        text_color_active: get_color_from_hex("#6b8a70")
        MDBottomNavigationItem:
            id: frNav
            name: 'fridge'
            text: 'Fridge'
            icon: 'fridge'
            ScrollView:
                id: frSc
                size: self.parent.width, self.parent.height
                do_scroll_x: False
                do_scroll_y: True
                bar_width: 20
                BoxLayout:
                    id: frScroll
                    pos_hint: {'center_y': 0.5, 'center_x': 0.5}
                    size_hint_y: None
                    height: self.minimum_height


                    orientation:'vertical'
                    spacing: 20


        MDBottomNavigationItem:
            id: fzNav
            name: 'freezer'
            text: 'Freezer'
            icon: 'snowflake'
            ScrollView:
                id: fzSc
                size: self.parent.width, self.parent.height
                do_scroll_x: False
                do_scroll_y: True
                bar_width: 20
                BoxLayout:
                    id: fzScroll
                    pos_hint: {'center_y': 0.5, 'center_x': 0.5}
                    size_hint_y: None
                    height: self.minimum_height


                    orientation:'vertical'
                    spacing: 20


        MDBottomNavigationItem:
            id: hmNav
            name: 'home'
            text: 'Home'
            icon: 'home'




        MDBottomNavigationItem:
            id: pnNav
            name: 'pantry'
            text: 'Pantry'
            icon: 'cupboard'
            ScrollView:
                id: pnSc
                size: self.parent.width, self.parent.height
                do_scroll_x: False
                do_scroll_y: True
                bar_width: 20
                BoxLayout:
                    id: pnScroll
                    pos_hint: {'center_y': 0.5, 'center_x': 0.5}
                    size_hint_y: None
                    height: self.minimum_height


                    orientation:'vertical'
                    spacing: 20


        MDBottomNavigationItem:
            id: msNav
            name: 'misc'
            text: 'Misc.'
            icon: 'food'
            ScrollView:
                id: msSc
                size: self.parent.width, self.parent.height
                do_scroll_x: False
                do_scroll_y: True
                bar_width: 20
                BoxLayout:
                    id: msScroll
                    pos_hint: {'center_y': 0.5, 'center_x': 0.5}
                    size_hint_y: None
                    height: self.minimum_height


                    orientation:'vertical'
                    spacing: 20

<FridgeDisplay@MDCard>:
    size_hint: None, None
    size: "300dp", "50dp"
    pos_hint: {"center_x": .5, "center_y": .5}

    MDLabel:
        id: fDisplayLabel
        halign: "center"
        text: "Ingredient"
        font_name: "DMSans-Regular"
        theme_text_color: "Custom"
        text_color: get_color_from_hex("#08421e")

    MDLabel:
        id: fAmtLabel
        halign: "center"
        text: "??? unit(s)"
        font_name: "DMSans-Regular"
        theme_text_color: "Custom"
        text_color: get_color_from_hex("#08421e")

    MDCheckbox:
        id: fDisplaySelector
        halign: "center"

<AddIngredientButton@MDFloatingActionButton>:
    icon: 'plus'
    pos_hint: {'center_x': 0.5}
    md_bg_color: get_color_from_hex("#6b8a70")
    on_press: app.showAddDialog()

<AddIngredientContent@BoxLayout>:
    orientation: 'vertical'
    spacing: '12dp'
    height: '250dp'
    size_hint_y: None
    MDTextField:
        hint_text: "Ingredient name"
        helper_text: "This field is required"
        helper_text_mode: "on_focus"

    MDTextField:
        hint_text: "Ingredient amount"
        helper_text: "This field is required (numbers and . only)"
        helper_text_mode: "on_focus"

    MDTextField:
        hint_text: "Ingredient unit"
        helper_text: "This field is required"
        helper_text_mode: "on_focus"

    MDFloatingActionButton:
        pos_hint: {'center_x': 0.5}
        icon: 'check'
        md_bg_color: get_color_from_hex("#6b8a70")








