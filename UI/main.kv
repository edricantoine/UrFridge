#:import get_color_from_hex kivy.utils.get_color_from_hex
<MainScreen>:
    id: mainScreen
    MDBottomNavigation:
        id: botNav
        panel_color: get_color_from_hex("#d0f7d6")
        selected_color_background: get_color_from_hex("#6b8a70")
        text_color_active: get_color_from_hex("#6b8a70")
        MDBottomNavigationItem:
            id: frNav
            name: 'fridge'
            text: 'Fridge'
            icon: 'fridge'
            ScrollView:
                id: frSc
                size: self.parent.width, self.parent.height
                do_scroll_x: False
                do_scroll_y: True
                bar_width: 20
                BoxLayout:
                    id: frScroll
                    pos_hint: {'center_y': 0.5, 'center_x': 0.5}
                    size_hint_y: None
                    height: self.minimum_height


                    orientation:'vertical'
                    spacing: 40


        MDBottomNavigationItem:
            id: fzNav
            name: 'freezer'
            text: 'Freezer'
            icon: 'snowflake'
            ScrollView:
                id: fzSc
                size: self.parent.width, self.parent.height
                do_scroll_x: False
                do_scroll_y: True
                bar_width: 20
                BoxLayout:
                    id: fzScroll
                    pos_hint: {'center_y': 0.5, 'center_x': 0.5}
                    size_hint_y: None
                    height: self.minimum_height


                    orientation:'vertical'
                    spacing: 40


        MDBottomNavigationItem:
            id: hmNav
            name: 'home'
            text: 'Home'
            icon: 'home'





        MDBottomNavigationItem:
            id: pnNav
            name: 'pantry'
            text: 'Pantry'
            icon: 'cupboard'
            ScrollView:
                id: pnSc
                size: self.parent.width, self.parent.height
                do_scroll_x: False
                do_scroll_y: True
                bar_width: 20
                BoxLayout:
                    id: pnScroll
                    pos_hint: {'center_y': 0.5, 'center_x': 0.5}
                    size_hint_y: None
                    height: self.minimum_height

                    orientation:'vertical'
                    spacing: 40


        MDBottomNavigationItem:
            id: msNav
            name: 'misc'
            text: 'Misc.'
            icon: 'food'
            ScrollView:
                id: msSc
                size: self.parent.width, self.parent.height
                do_scroll_x: False
                do_scroll_y: True
                bar_width: 20
                BoxLayout:
                    id: msScroll
                    pos_hint: {'center_y': 0.5, 'center_x': 0.5}
                    size_hint_y: None
                    height: self.minimum_height

                    orientation:'vertical'
                    spacing: 40

<FridgeDisplay@MDCard>:
    size_hint: None, None
    size: "300dp", "50dp"
    pos_hint: {"center_x": .5, "center_y": .5}

    MDLabel:
        id: fDisplayLabel
        halign: "center"
        text: "Ingredient"
        font_name: "DMSans-Regular"
        theme_text_color: "Custom"
        text_color: get_color_from_hex("#08421e")

    MDLabel:
        id: fAmtLabel
        halign: "center"
        text: "??? unit(s)"
        font_name: "DMSans-Regular"
        theme_text_color: "Custom"
        text_color: get_color_from_hex("#08421e")

    MDIconButton:
        icon: 'pencil'
        icon_size: '32sp'
        halign: 'center'
        on_press: self.parent.callEdit()

    MDIconButton:
        icon: 'trash-can'
        icon_size: '32sp'
        halign: 'center'

        on_press: self.parent.deletus_ingredient(), self.parent.ms.clearify()

    MDCheckbox:
        id: fDisplaySelector
        halign: "center"
        on_active: self.parent.on_checkbox(*args)

<NothingThereLabel@MDLabel>:

    text: "Add an ingredient using the + button!"
    font_name: 'Deysia Brush'
    halign: 'center'
    pos_hint: {'center_x': 0.5}
    theme_text_color: "Custom"
    text_color: get_color_from_hex("#aebfb3")

<InfoLabel@MDLabel>:

    text: "Use the checkbox to select ingredients for recipe search."
    font_name: 'Deysia Brush'
    font_size: '20sp'
    halign: 'center'
    pos_hint: {'center_x': 0.5, 'center_y': 0}
    theme_text_color: "Custom"
    text_color: get_color_from_hex("#aebfb3")

<AddIngredientButtonFr@MDFloatingActionButton>:
    icon: 'plus'
    pos_hint: {'center_x': 0.5}
    md_bg_color: get_color_from_hex("#6b8a70")
    on_press: app.showAddDialogFrg()


<AddIngredientButtonFz@MDFloatingActionButton>:
    icon: 'plus'
    pos_hint: {'center_x': 0.5}
    md_bg_color: get_color_from_hex("#6b8a70")
    on_press: app.showAddDialogFrz()

<AddIngredientButtonPn@MDFloatingActionButton>:
    icon: 'plus'
    pos_hint: {'center_x': 0.5}
    md_bg_color: get_color_from_hex("#6b8a70")
    on_press: app.showAddDialogPn()

<AddIngredientButtonMs@MDFloatingActionButton>:
    icon: 'plus'
    pos_hint: {'center_x': 0.5}
    md_bg_color: get_color_from_hex("#6b8a70")
    on_press: app.showAddDialogMs()

<EditIngredientContent@BoxLayout>:
    orientation: 'vertical'
    spacing: '12dp'
    height: '150dp'
    size_hint_y: None

    MDDropDownItem:
        id: ddItem
        pos_hint: {'center_x': 0.5}

        text: "Select..."
        on_release: app.menu.open()

    MDTextField:
        id: newAmount
        hint_text: "New ingredient amount"
        input_filter: 'float'
        max_text_length: 10
        helper_text: "This field is required"
        helper_text_mode: 'on_focus'


    MDFloatingActionButton:
        id: editButton
        pos_hint: {'center_x': 0.5}
        icon: 'check'
        md_bg_color: get_color_from_hex("#6b8a70")
        on_press: self.parent.readInput(), app.dialog_close()


<AddIngredientContent@BoxLayout>:
    orientation: 'vertical'
    spacing: '12dp'
    height: '250dp'
    size_hint_y: None
    MDTextField:
        id: ingName
        hint_text: "Ingredient name"
        max_text_length: 10
        required: True
        helper_text: "This field is required"
        helper_text_mode: "on_focus"

    MDTextField:
        id: ingAmt
        hint_text: "Ingredient amount"
        input_filter: 'float'
        max_text_length: 10
        required: True
        helper_text: "This field is required"
        helper_text_mode: "on_focus"

    MDTextField:
        id: ingUnit
        hint_text: "Ingredient unit"
        max_text_length: 10
        required: True
        helper_text: "This field is required"
        helper_text_mode: "on_focus"

    MDFloatingActionButton:
        id: addButton
        pos_hint: {'center_x': 0.5}
        icon: 'check'
        md_bg_color: get_color_from_hex("#6b8a70")
        on_press: self.parent.readInput(), app.dialog_close()








