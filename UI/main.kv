<LoginScreen>:
    id: loginScreen
    GridLayout:
        id: loginGrid
        cols: 1
        rows_minimum: {0: (self.height) * 0.5, 1: (self.height) * 0.6}
        row_force_default: True
        Image:
            id: appLogo
            source: 'logo2.png'
            allow_stretch: True




<LoginLayout@GridLayout>:
    cols: 1
    spacing: 40
    rows_minimum: {0: (self.height) * 0.25, 1: (self.height) * 0.3}
    row_force_default: True
    MDTextField:
        pos_hint: {'center_x': 0.5}
        mode: 'fill'
        id: idName
        font_name: "DMSans-Regular"
        hint_text: "Enter a unique User ID!"
        max_text_length: 20
        color_mode: 'custom'
        line_color_focus: get_color_from_hex("#6b8a70")

    AnchorLayout:
        MDFillRoundFlatButton:
            pos_hint: {'center_x': 0.5}
            text: "CREATE ACCOUNT"
            font_name: "DMSans-Regular"
            font_size: "15sp"
            md_bg_color: get_color_from_hex("#6b8a70")

    MDLabel:
        halign: 'center'
        font_name: "DMSans-Regular"
        text: "YourFridge Â© Edric Antoine 2022"
        theme_text_color: "Custom"
        font_size: '10sp'
        text_color: get_color_from_hex("#bec5d1")



<FridgeDisplay@MDCard>:
    size_hint: None, None
    size: "325dp", "50dp"
    pos_hint: {"center_x": .5, "center_y": .5}

    MDLabel:
        id: fDisplayLabel
        halign: "center"
        text: "Ingredient"
        font_size: fDisplayLabel.height / 2
        font_name: "DMSans-Regular"
        theme_text_color: "Custom"
        text_color: get_color_from_hex("#08421e")
        on_texture: self.parent.on_text()


    MDLabel:
        id: fAmtLabel
        halign: "center"
        text: "??? unit(s)"
        font_name: "DMSans-Regular"
        theme_text_color: "Custom"
        text_color: get_color_from_hex("#08421e")

    MDIconButton:
        icon: 'pencil'
        icon_size: '32sp'
        halign: 'center'
        on_press: self.parent.callEdit()

    MDIconButton:
        icon: 'trash-can'
        icon_size: '32sp'
        halign: 'center'

        on_press: self.parent.deletus_ingredient(), app.saveToJson()

    MDCheckbox:
        id: fDisplaySelector
        halign: "center"
        on_active: self.parent.on_checkbox(*args)

<NothingThereLabel@MDLabel>:

    text: "Add an ingredient using the + button!"
    font_name: 'Deysia Brush'
    halign: 'center'
    font_size: '25sp'
    pos_hint: {'center_x': 0.5}
    theme_text_color: "Custom"
    text_color: get_color_from_hex("#aebfb3")

<InfoLabel@MDLabel>:

    text: "Use the checkbox to select ingredients for recipe search."
    font_name: 'Deysia Brush'
    font_size: '20sp'
    halign: 'center'
    pos_hint: {'center_x': 0.5, 'center_y': 0}
    theme_text_color: "Custom"
    text_color: get_color_from_hex("#aebfb3")

<AddIngredientButtonFr@MDFloatingActionButton>:
    icon: 'plus'
    halign: 'center'
    pos_hint: {'center_x': 0.5}
    md_bg_color: get_color_from_hex("#6b8a70")
    on_press: app.showAddDialogFrg()


<AddIngredientButtonFz@MDFloatingActionButton>:
    icon: 'plus'
    pos_hint: {'center_x': 0.5}
    md_bg_color: get_color_from_hex("#6b8a70")
    on_press: app.showAddDialogFrz()

<AddIngredientButtonPn@MDFloatingActionButton>:
    icon: 'plus'
    pos_hint: {'center_x': 0.5}
    md_bg_color: get_color_from_hex("#6b8a70")
    on_press: app.showAddDialogPn()

<AddIngredientButtonMs@MDFloatingActionButton>:
    icon: 'plus'
    pos_hint: {'center_x': 0.5}
    md_bg_color: get_color_from_hex("#6b8a70")
    on_press: app.showAddDialogMs()

<EditIngredientContent@BoxLayout>:
    orientation: 'vertical'
    spacing: '12dp'
    height: '150dp'
    size_hint_y: None

    MDDropDownItem:
        id: ddItem
        pos_hint: {'center_x': 0.5}

        text: "Select..."
        on_release: app.menu.open()

    MDTextField:
        id: newAmount
        hint_text: "New ingredient amount"
        input_filter: 'float'
        max_text_length: 10
        helper_text: "This field is required"
        helper_text_mode: 'on_focus'
        color_mode: 'custom'
        line_color_focus: get_color_from_hex("#6b8a70")


    MDFloatingActionButton:
        id: editButton
        pos_hint: {'center_x': 0.5}
        icon: 'check'
        md_bg_color: get_color_from_hex("#6b8a70")
        on_press: self.parent.readInput(), app.dialog_close(), app.saveToJson()


<AddIngredientContent@BoxLayout>:
    orientation: 'vertical'
    spacing: '12dp'
    height: '250dp'
    size_hint_y: None
    MDTextField:
        id: ingName
        hint_text: "Ingredient name"
        max_text_length: 10
        required: True
        helper_text: "This field is required"
        helper_text_mode: "on_focus"
        color_mode: 'custom'
        line_color_focus: get_color_from_hex("#6b8a70")

    MDTextField:
        id: ingAmt
        hint_text: "Ingredient amount"
        input_filter: 'float'
        max_text_length: 10
        required: True
        helper_text: "This field is required"
        helper_text_mode: "on_focus"
        color_mode: 'custom'
        line_color_focus: get_color_from_hex("#6b8a70")

    MDTextField:
        id: ingUnit
        hint_text: "Ingredient unit"
        max_text_length: 10
        required: True
        helper_text: "This field is required"
        helper_text_mode: "on_focus"
        color_mode: 'custom'
        line_color_focus: get_color_from_hex("#6b8a70")

    MDFloatingActionButton:
        id: addButton
        pos_hint: {'center_x': 0.5}
        icon: 'check'
        md_bg_color: get_color_from_hex("#6b8a70")
        on_press: self.parent.readInput(), app.dialog_close(), app.saveToJson()








