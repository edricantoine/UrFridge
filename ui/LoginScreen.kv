
<LoginScreen>:
    id: loginScreen
    GridLayout:
        id: loginGrid
        cols: 1
        rows_minimum: {0: (self.height) * 0.5, 1: (self.height) * 0.6}
        row_force_default: True
        Image:
            id: appLogo
            source: app.resource_path("logo2.png")
            allow_stretch: True


