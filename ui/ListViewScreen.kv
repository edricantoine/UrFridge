<ListViewScreen>:
    BoxLayout:
        orientation: 'vertical'
        MDToolbar:
            id: lviewToolbar
            md_bg_color: get_color_from_hex("#d0f7d6")
            left_action_items: [["arrow-left", lambda x: app.switchToMain()]]

        MDBottomNavigation:
            id: viewNav
            panel_color: get_color_from_hex("#d0f7d6")
            selected_color_background: get_color_from_hex("#6b8a70")
            text_color_active: get_color_from_hex("#6b8a70")

            MDBottomNavigationItem:
                id: listNav
                name: 'view'
                text: 'View Lists'
                icon: 'menu'

                GridLayout:
                    id: viewListBox
                    cols: 1
                    rows_minimum: {0: (self.parent.height - dp(30)) * 0.1, 1: (self.parent.height - dp(30)) * 0.9}
                    row_force_default: True
                    spacing: 40
                    AnchorLayout:
                        id: viewListBb
                        MDDropDownItem:
                            id: sortItemList
                            pos_hint: {'center_x': 0.5}
                            text: "Sort by..."
                            on_release: app.set_menu_list()
                    BoxLayout:
                        orientation: 'vertical'
                        spacing: 60

                        ScrollView:
                            id: viewListSc
                            size: (self.parent.width, self.parent.height)
                            do_scroll_x: False
                            do_scroll_y: True
                            bar_width: 20
                            BoxLayout:
                                id: viewListScroll
                                size_hint_y: None
                                height: self.minimum_height
                                orientation:'vertical'
                                spacing: 40

