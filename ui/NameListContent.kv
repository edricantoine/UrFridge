<NameListContent@BoxLayout>:
    orientation: 'vertical'
    spacing: '12dp'
    height: '150dp'
    size_hint_y: None

    MDTextField:
        id: listName
        hint_text: "Give your list a name!"
        max_text_length: 10
        helper_text: "This field is required"
        helper_text_mode: 'on_focus'
        color_mode: 'custom'
        line_color_focus: get_color_from_hex("#6b8a70")


    MDFloatingActionButton:
        id: goButton
        pos_hint: {'center_x': 0.5}
        icon: 'check'
        md_bg_color: get_color_from_hex("#6b8a70")
        on_press: self.parent.readInput(), app.dialog_close()