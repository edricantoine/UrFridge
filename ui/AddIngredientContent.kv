<AddIngredientContent@BoxLayout>:
    orientation: 'vertical'
    spacing: '12dp'
    height: '250dp'
    size_hint_y: None
    MDTextField:
        id: ingName
        hint_text: "Ingredient name"
        max_text_length: 10
        required: True
        helper_text: "This field is required"
        helper_text_mode: "on_focus"
        color_mode: 'custom'
        line_color_focus: get_color_from_hex("#6b8a70")

    MDTextField:
        id: ingAmt
        hint_text: "Ingredient amount"
        input_filter: 'float'
        max_text_length: 10
        required: True
        helper_text: "This field is required"
        helper_text_mode: "on_focus"
        color_mode: 'custom'
        line_color_focus: get_color_from_hex("#6b8a70")

    MDTextField:
        id: ingUnit
        hint_text: "Ingredient unit"
        max_text_length: 10
        required: True
        helper_text: "This field is required"
        helper_text_mode: "on_focus"
        color_mode: 'custom'
        line_color_focus: get_color_from_hex("#6b8a70")

    MDFloatingActionButton:
        id: addButton
        pos_hint: {'center_x': 0.5}
        icon: 'check'
        md_bg_color: get_color_from_hex("#6b8a70")
        on_press: self.parent.readInput(), app.dialog_close()




