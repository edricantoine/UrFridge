#:import get_color_from_hex kivy.utils.get_color_from_hex
<MainScreen>:
    id: mainScreen
    MDBoxLayout:
        orientation: 'vertical'
        MDTopAppBar:
            id: mainToolbar
            md_bg_color: get_color_from_hex("#d0f7d6")
            left_action_items: [["menu", lambda x: app.set_menu_main(x)]]
            Image:
                source: app.resource_path("logo2.png")
                pos_hint: {'center_x': 0.5, 'center_y': 0}
                pos: (((self.parent.size[0])/2)-200,self.pos[1])
                pos_hint_x: None
                size_hint_x: None
                size_hint_y: None
                height: dp(200)
                width: dp(200)
                allow_stretch: True



        MDBottomNavigation:
            id: botNav
            panel_color: get_color_from_hex("#d0f7d6")
            selected_color_background: get_color_from_hex("#6b8a70")
            text_color_active: get_color_from_hex("#6b8a70")

            MDBottomNavigationItem:
                id: frNav
                name: 'fridge'
                text: 'Fridge'
                icon: 'fridge'

                GridLayout:
                    id: frBox
                    cols: 1
                    rows_minimum: {0: (self.parent.height - dp(30)) * 0.7, 1: (self.parent.height - dp(30)) * 0.1, 2: (self.parent.height - dp(30)) * 0.01}
                    row_force_default: True
                    spacing: 40
                    BoxLayout:
                        orientation: 'vertical'
                        spacing: 40

                        ScrollView:
                            id: frSc
                            size: (self.parent.width, self.parent.height)
                            do_scroll_x: False
                            do_scroll_y: True
                            bar_width: 20
                            BoxLayout:
                                id: frScroll
                                size_hint_y: None
                                height: self.minimum_height
                                orientation:'vertical'
                                spacing: 40

                    AnchorLayout:
                        id: frBb



            MDBottomNavigationItem:
                id: fzNav
                name: 'freezer'
                text: 'Freezer'
                icon: 'snowflake'
                GridLayout:
                    id: fzBox
                    cols: 1
                    rows_minimum: {0: (self.parent.height - dp(30)) * 0.7, 1: (self.parent.height - dp(30)) * 0.1, 2: (self.parent.height - dp(30)) * 0.01}
                    row_force_default: True
                    spacing: 40
                    BoxLayout:
                        orientation: 'vertical'
                        spacing: 40

                        ScrollView:
                            id: fzSc
                            size: (self.parent.width, self.parent.height)
                            do_scroll_x: False
                            do_scroll_y: True
                            bar_width: 20
                            BoxLayout:
                                id: fzScroll
                                size_hint_y: None
                                height: self.minimum_height
                                orientation:'vertical'
                                spacing: 40

                    AnchorLayout:
                        id: fzBb



            MDBottomNavigationItem:
                id: hmNav
                name: 'home'
                text: 'Home'
                icon: 'home'
                GridLayout:
                    id: hmGrid
                    cols: 1
                    rows_minimum: {0: (self.parent.height) * 0.05, 1: (self.parent.height) * 0.2, 2: (self.parent.height) * 0.4, 3: (self.parent.height) * 0.3}
                    row_force_default: True
                    MDLabel:
                        id: welcomeLabel
                        halign: 'center'
                        font_name: "DMSans"
                        text: "Hello, " + app.app.getId() + "!"
                        theme_text_color: "Custom"
                        font_size: '25sp'
                        size: self.texture_size

                        text_color: get_color_from_hex("#08421e")

                    MDLabel:
                        id: wLabel2
                        halign: 'center'
                        font_name: "DMSans"
                        text: "Here are your selected ingredients:"
                        theme_text_color: "Custom"
                        font_size: '15sp'
                        size: self.texture_size
                        text_color: get_color_from_hex("#08421e")

                    ScrollView:
                        id: selectedScroll
                        size: (self.parent.width, self.parent.height)
                        do_scroll_x: False
                        do_scroll_y: True
                        bar_width: 20
                        canvas.before:
                            Color:
                                rgba: get_color_from_hex("#ebebeb")
                            Rectangle:
                                size: self.size
                                pos: self.pos
                        GridLayout:
                            id: selectedGrid
                            size_hint_y: None
                            spacing: 60
                            cols: 2
                            height: self.minimum_height


                    GridLayout:
                        id: extrasGrid
                        cols: 2
                        spacing: 40
                        rows_minimum: {0: (self.height) * 0.4, 1: (self.height) * 0.2}
                        row_force_default: True
                        AnchorLayout:
                            MDRectangleFlatButton:
                                text: "Get Recipe"
                                theme_text_color: "Custom"
                                text_color: get_color_from_hex("#08421e")
                                line_color: get_color_from_hex("#08421e")
                                on_press: app.showGetRecipeDialog()
                        AnchorLayout:
                            MDRectangleFlatButton:
                                text: "Save to Lists"
                                theme_text_color: "Custom"
                                text_color: get_color_from_hex("#08421e")
                                line_color: get_color_from_hex("#08421e")
                                on_press: app.showNameListDialog()
                        AnchorLayout:
                            MDRectangleFlatButton:
                                text: "My Lists"
                                theme_text_color: "Custom"
                                text_color: get_color_from_hex("#08421e")
                                line_color: get_color_from_hex("#08421e")
                                on_press: app.openListViewScreen()



            MDBottomNavigationItem:
                id: pnNav
                name: 'pantry'
                text: 'Pantry'
                icon: 'cupboard'
                GridLayout:
                    id: pnBox
                    cols: 1

                    rows_minimum: {0: (self.parent.height - dp(30)) * 0.7, 1: (self.parent.height - dp(30)) * 0.1, 2: (self.parent.height - dp(30)) * 0.01}
                    row_force_default: True
                    spacing: 40
                    BoxLayout:
                        orientation: 'vertical'
                        spacing: 40

                        ScrollView:
                            id: pnSc
                            size: (self.parent.width, self.parent.height)
                            do_scroll_x: False
                            do_scroll_y: True
                            bar_width: 20
                            BoxLayout:
                                id: pnScroll
                                size_hint_y: None
                                height: self.minimum_height
                                orientation:'vertical'
                                spacing: 40

                    AnchorLayout:
                        id: pnBb



            MDBottomNavigationItem:
                id: msNav
                name: 'misc'
                text: 'Misc.'
                icon: 'food'
                GridLayout:
                    id: msBox
                    cols: 1

                    rows_minimum: {0: (self.parent.height - dp(30)) * 0.7, 1: (self.parent.height - dp(30)) * 0.1, 2: (self.parent.height - dp(30)) * 0.01}
                    row_force_default: True
                    spacing: 40
                    BoxLayout:
                        orientation: 'vertical'
                        spacing: 40

                        ScrollView:
                            id: msSc
                            size: (self.parent.width, self.parent.height)
                            do_scroll_x: False
                            do_scroll_y: True
                            bar_width: 20
                            BoxLayout:
                                id: msScroll
                                size_hint_y: None
                                height: self.minimum_height
                                orientation:'vertical'
                                spacing: 40

                    AnchorLayout:
                        id: msBb


<SpecialLabel@MDLabel>:
    halign: 'center'
    font_name: 'DMSans'
    font_size: '15sp'
    theme_text_color: "Custom"
    text_color: get_color_from_hex("#08421e")
    size: self.texture_size
    size_hint_y: None

<NothingThereLabel@MDLabel>:

    text: "Add an ingredient using the + button!"

    halign: 'center'
    font_size: '25sp'
    pos_hint: {'center_x': 0.5}
    theme_text_color: "Custom"
    text_color: get_color_from_hex("#aebfb3")

<InfoLabel@MDLabel>:

    text: "Use the checkbox to select ingredients for recipe search."

    font_size: '20sp'
    halign: 'center'
    pos_hint: {'center_x': 0.5, 'center_y': 0}
    theme_text_color: "Custom"
    text_color: get_color_from_hex("#aebfb3")

<AddIngredientButtonFr@MDFloatingActionButton>:
    icon: 'plus'
    halign: 'center'
    pos_hint: {'center_x': 0.5}
    md_bg_color: get_color_from_hex("#6b8a70")
    on_press: app.showAddDialogFrg()


<AddIngredientButtonFz@MDFloatingActionButton>:
    icon: 'plus'
    pos_hint: {'center_x': 0.5}
    md_bg_color: get_color_from_hex("#6b8a70")
    on_press: app.showAddDialogFrz()

<AddIngredientButtonPn@MDFloatingActionButton>:
    icon: 'plus'
    pos_hint: {'center_x': 0.5}
    md_bg_color: get_color_from_hex("#6b8a70")
    on_press: app.showAddDialogPn()

<AddIngredientButtonMs@MDFloatingActionButton>:
    icon: 'plus'
    pos_hint: {'center_x': 0.5}
    md_bg_color: get_color_from_hex("#6b8a70")
    on_press: app.showAddDialogMs()



<RecipeDisplay@MDCardSwipe>:
    orientation: 'vertical'
    spacing: 60
    size_hint_y: None
    height: recFront.minimum_height

    MDCardSwipeFrontBox:
        id: recFront






